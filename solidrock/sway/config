# SolidRock Desktop Sway configuration
set $mod Mod4

# Start Electron components (panel always visible, launcher hidden)
exec_always solidrock-panel
exec_always solidrock-dock
exec_always solidrock-launcher --hidden

# Start notifications daemon via systemd user
exec_always systemctl --user start solidrock-notify.service

# No default bar
bar {
  mode invisible
}

# Wallpaper if swaybg is available
exec_always "swaybg -m fill -i /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png"

# Keybindings
include /etc/solidrock/sway/keybindings.conf

# Basic input defaults
input * {
  xkb_layout "br"
}

# Floating rules for launcher
for_window [app_id="solidrock-launcher"] floating enable

# Gaps
gaps inner 5
gaps bottom 84
